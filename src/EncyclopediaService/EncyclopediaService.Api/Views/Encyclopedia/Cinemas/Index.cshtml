@page
@model EncyclopediaService.Api.Views.Encyclopedia.Cinemas.IndexModel;
@{
    ViewData["Title"] = "Cinemas";
}

<h1>Cinemas</h1>

<body>
    <div class="container">
        <div class="row mt-4">
            <!-- Collection Grid -->
            <div class="col-md-9">
                @{
                    string _css_rows = "row row-cols-4 row-cols-md-3 row-cols-sm-2";
                    string _css_cols = "col-3 row-cols-md-4 col-sm-6";
                }
                
                <div class=@(_css_rows)> 
                    @foreach (var cinema in Model.List)                       
                    {                             
                    <div class=@(_css_cols)>                                
                        <div class="card mb-md-4">
                            <a asp-page="/encyclopedia/cinemas/cinema" asp-route-id="@cinema.Id">
							    <img src="~/img/grid_poster_placeholder.png" class="card-img-top" alt="Cinema @(cinema.Id)">
                           </a>							
                            <div class="card-body border-bottom" style="padding-bottom:1rem;">										
                                <div class="text-truncate">                                            
                                    <h6 class="card-text fw-normal">												
                                        <a class="link-black link-underline-none link-underline-blue-offset-2-hover"                                                   
                                         asp-page="/encyclopedia/cinemas/cinema" asp-route-id="@cinema.Id">Title of cinema @cinema.Id</a>                                            
                                    </h6>										
                                </div>                                        
                                <div class="row-cols-9">										
                                    <p class="text-end card-subtitle" style="color:cadetblue;">@(cinema.Year)</p>                                      
                                </div>                                 
                            </div>                               
                        </div>                          
                    </div>                       
                    }                        
                </div>
            </div>

            <!-- Filter Options -->
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Filter Options</h5>
                        <form>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="option1">
                                <label class="form-check-label" for="option1">
                                    Option 1
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="option2">
                                <label class="form-check-label" for="option2">
                                    Option 2
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="option3">
                                <label class="form-check-label" for="option3">
                                    Option 3
                                </label>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

