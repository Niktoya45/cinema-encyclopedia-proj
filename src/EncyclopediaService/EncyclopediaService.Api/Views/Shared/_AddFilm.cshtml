@using EncyclopediaService.Api.Models.Display
@model CinemaRecord
@{
}


<input type="hidden" asp-for="@(Model.Name)" value="@(Model.Name)">
<input type="hidden" asp-for="@(Model.Id)" value="@(Model.Id)">
<input type="hidden" asp-for="@(Model.Picture)" value="@(Model.Picture)">

<div class="row">
	<div class="col-6">
		<img src="@(Model.Picture)" style="width:fit-content" />
	</div>
	<div class="col-6">

		<ul class="list-group list-group-flush">
			<li class="list-group-item form-group search-dropdown search-filmography">
				<label asp-for="Name">Provide title</label>
				<br>
				<input class="form-control search-input" placeholder="Search.." asp-for="Name" autofocus autocomplete="off">
				<ul class="list-group search-suggestions suggestions-filmography"></ul>
				<br>
				<span asp-validation-for="Name" class="text-danger"></span>
			</li>
		</ul>

	</div>
</div>

