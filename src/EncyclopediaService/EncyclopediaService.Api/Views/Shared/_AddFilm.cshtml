@using EncyclopediaService.Api.Models.Display
@model CinemaRecord
@{
}


<input type="hidden" asp-for="@(Model.Name)" value="@(Model.Name)">
<input type="hidden" asp-for="@(Model.Id)" value="@(Model.Id)">
<input type="hidden" asp-for="@(Model.Picture)" value="@(Model.Picture)">
<input type="hidden" asp-for="@(Model.PictureUri)" value="@(Model.PictureUri)">

<div class="row cinema-poster-grid">
	<div class="col-6">
		@if (Model.Picture != null)
		{
			<img src=@(Model.Picture) style="width:130px;" alt="@(Model.Name)">
		}
		else
		{
			<img class="img img-fluid img-placeholder" style="width:130px;" alt="@(Model.Name)">
		}
	</div>
	<div class="col-6">

		<ul class="list-group list-group-flush">
			<li class="list-group-item form-group search-dropdown search-filmography">
				<label asp-for="Name">Provide title</label>
				<br>
				<input class="form-control search-input" placeholder="Search.." asp-for="Name" autofocus autocomplete="off">
				<ul class="list-group search-suggestions suggestions-filmography cinema-poster-search"></ul>
				<br>
				<span asp-validation-for="Name" class="text-danger"></span>
			</li>
		</ul>

	</div>
</div>

