<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EncyclopediaService.Api</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/customs.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a id="brand" class="navbar-brand" href="/encyclopedia/cinemas/all/">Cinema Encyclopedia</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse hstack d-sm-inline-flex align-items-center">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" href="/encyclopedia/cinemas/all/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/encyclopedia/cinemas/all/">Privacy</a>
                        </li>

						<li class="nav-item ms-4">
							<div class="input-group">
								<a class="input-group-text nav-link text-black-50" style="border-radius:10% 0 0 10%" href="#">Search</a>
							</div>
                        </li>
						
                        <li class="nav-item">
                            <div class="input-group">
                                <select id="layout-select" class="form-select bg-dark nav-link" style="width:10rem;border-top-left-radius:0;border-bottom-left-radius:0">
									@foreach (Entities entity in Enum.GetValues(typeof(Entities)))
									{
										<option class="nav-link">
											<a href="/encyclopedia/@(entity.ToString().ToLower())/all/">@(entity)</a>
                                        </option>
									}
								</select>
							</div>
                        </li>

                        <li class="nav-item">
                            <input id="search" class="form-control ms-2 rounded-2" type="text" style="width:40rem" placeholder=" . . . " />
                        </li>

                        <li class="nav-item ms-auto">
                            <a id="account" data-bs-toggle="offcanvas" href="#account-options" aria-controls="account-options">
                                <div class="input-group">
                                    <span id="account-name" class="nav-link fs-6"> Account </span>
									<svg id="account-icon" width="45" height="45" xmlns="http://www.w3.org/2000/svg">
										<circle cx="22" cy="43" r="21" />
										<circle cx="21" cy="15" r="12" />
										<line x1="1" x2="44" y1="45" y2="45" stroke="#aaaaaa" stroke-width="2" />
									</svg>
                                </div>

                            </a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-2">
            @RenderBody()
        </main>

		<div class="offcanvas offcanvas-end box-shadow bg-dark" tabindex="-1" id="account-options" aria-labelledby="account-optionsLabel" style="height:100%;width:15%;">
            <div class="offcanvas-header bg-dark">
                <h5 id="account-optionsLabel" class="text-muted">Options</h5>
            </div>
            <div class="offcanvas-body bg-dark mb-3">
                <div class="navbar-dark bg-dark h-100">
                    <div class="vstack align-items-center h-100">
                        <ul class="navbar-nav flex-grow-1 w-100 mb-2" style="height:80%">
                            <li class="nav-item">
                                <a class="nav-link" href="https://localhost:7236/profiles/3">Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link">Marked</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="collapse" href="#account-options-page" role="button" aria-expanded="false" aria-controls="account-options-page">Create page for..</a>

                                <div class="collapse" id="account-options-page">
                                    <div class="card card-body bg-dark">
                                        <ul class="navbar-nav">
                                            @foreach (int entity in Enum.GetValues(typeof(Entities)))
                                            { 
                                                <li class="nav-item">
                                                    <a class="nav-link">@((Entities)entity)</a>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </li>
                        </ul>
                        <ul class="navbar-nav flex-grow-1 mt-auto w-100 mb-2">
                            <li class="nav-item">
                                <a class="nav-link">Logout</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container pt-3 mt-4">
            &copy; 2025 - EncyclopediaService.Api - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
