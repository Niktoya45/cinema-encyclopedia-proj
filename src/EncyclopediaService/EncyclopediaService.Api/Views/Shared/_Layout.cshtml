<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EncyclopediaService.Api</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/customs.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EncyclopediaService.Api.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a id="brand" class="navbar-brand" href="/encyclopedia/cinemas/all/">Cinema Encyclopedia</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" href="/encyclopedia/cinemas/all/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/encyclopedia/cinemas/all/">Privacy</a>
                        </li>

						<li class="nav-item ms-4">
							<div class="input-group">
								<a class="input-group-text nav-link text-black-50" style="border-radius:10% 0 0 10%" href="#">Search</a>
							</div>
                        </li>
						
                        <li class="nav-item">
                            <div class="input-group">
                                <select id="layout-select" class="form-select bg-dark nav-link" style="width:10rem;border-top-left-radius:0;border-bottom-left-radius:0">
									@foreach (int entity in Enum.GetValues(typeof(Entities)))
									{
										<option class="nav-link">
											<a href="/encyclopedia/@((Entities)entity)/all/">@((Entities)entity)</a>
                                        </option>
									}
								</select>
							</div>
                        </li>

                        <li class="nav-item">
                            <input id="search" class="form-control ms-2 rounded-2" type="text" style="width:40rem" placeholder=" . . . " />
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-2">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container pt-3 mt-4">
            &copy; 2025 - EncyclopediaService.Api - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
